System_Ext(module_video, "Модуль видеонаблюдения", "Позволяет просматривать обстановаку")

Rel_D(customer, warmhouse, "Использует")
Rel_D(warmhouse, module_warm, "Управляет")
Rel_D(warmhouse, module_light, "Управляет")
Rel_D(warmhouse, module_gate, "Управляет")
Rel_D(warmhouse, module_video, "Управляет")

@enduml